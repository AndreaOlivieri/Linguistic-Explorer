<h1>Listing lings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Depth</th>
    <th>Parent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lings.each do |ling| %>
  <tr>
    <td><%= ling.name %></td>
    <td><%= ling.depth %></td>
    <td><%= (link_to ling.parent.name, group_ling_path(current_group, ling.parent)) if ling.parent %></td>
    <td><%= link_to 'Show', [current_group, ling] %></td>
    <td><%= link_to 'Edit', edit_group_ling_path(current_group, ling) %></td>
    <td><%= link_to 'Destroy', [current_group, ling], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Ling', new_group_ling_path(current_group) %>
