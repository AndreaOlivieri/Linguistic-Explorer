- name = current_group.ling_name_for_depth(@depth)
- page_heading name
%h1
  Listing #{name.pluralize}
%form.form
  .row
    .col-md-6
      .form-group
        %label{:for => "ling-search-field"} Quick look
        %input#ling-search-field.form-control{:autocomplete => "off", :placeholder => "Loading...", :type => "text"}
    .col-md-6
      .form-group
        - if can_see? :manage, Ling.new{|l| l.group = current_group}
          = link_to new_group_ling_path(current_group, :depth => @depth), :class => "btn btn-success pull-right", :title => "Create" do
            = icon "plus", "New #{current_group.ling_name_for_depth(@depth)}"
/ .row
/   .col-md-5
/     %input#ling-search-field{:autocomplete => "off", :disabled => "", :placeholder => "Loading...", :type => "text"}/
#pagination_table
  = render :partial => "depth_table", :locals => {:lings => @lings, :depth => @depth, :paginate_params => @params }
