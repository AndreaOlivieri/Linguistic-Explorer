<%= form_for(@ling) do |f| %>
  <% if @ling.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ling.errors.count, "error") %> prohibited this ling from being saved:</h2>

      <ul>
      <% @ling.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :group_id, "Group" %>
    <%= f.select :group_id, groups_options %>
  </div>

  <div class="field">
    <%= f.label :depth %><br />
    <%= f.number_field :depth, :in => 0..1 %>
  </div>

  <div class="field">
    <%= f.label :parent %><br />
    <%= f.text_field :parent_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
