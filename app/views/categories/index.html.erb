  </tr>

<% @categories.each do |category| %>
  <tr>
    <td><%= category.name %></td>
    <td><%= category.depth %></td>
    <td><%= link_to 'Show', [@group, category] %></td>
    <td><%= link_to 'Edit', edit_group_category_path(@group, category) %></td>
    <td><%= link_to 'Destroy', [@group, category], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

