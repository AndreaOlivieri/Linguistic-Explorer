<!DOCTYPE html>
<html>
  <head>
    <title><%= page_title %></title>
    <%= stylesheet_link_tag 'reset', 'framework', 'application', 'bootstrap.min', 'jquery-ui', 'gmaps4rails' %>
    <%= javascript_include_tag :defaults, 'bootstrap.min' %>
    <%= csrf_meta_tag %>
    <%= yield :head %>
  </head>
  <body class="<%= body_classes %>">
    <%= render :partial => 'layouts/header' %>

    <div id="main" class="container">
      <div id="messages">
        <% unless alert.blank? %>
          <p class="alert"><%= alert %></p>
        <% end %>
        <% unless notice.blank? %>
          <p class="notice"><%= notice %></p>
      <% end %>
      </div>
      <%= yield %>
    </div>

    <div id="footer" class="container">
      <%= yield :scripts %>
      <p>&copy; 2011 terraling.com. 10 Washington Place, New York, NY 10003 . <a href="mailto:support@terraling.com">support AT terraling.com</a>. All Rights Reserved</p>
    </div>

  </body>
</html>
