<%= content_tag :fieldset, :id => "show_columns" do %>
  <%= label_tag     "search[include][ling_0]", current_group.ling0_name.pluralize %>
  <%= check_box_tag "search[include][ling_0]", "1", true %>

  <% if current_group.has_depth? %>
    <%= label_tag     "search[include][ling_1]", current_group.ling1_name.pluralize %>
    <%= check_box_tag "search[include][ling_1]", "1", true %>
  <% end %>

  <%= label_tag     "search[include][prop]", current_group.property_name.pluralize %>
  <%= check_box_tag "search[include][prop]", "1", true %>


  <%= label_tag     "search[include][value]", current_group.lings_property_name.pluralize %>
  <%= check_box_tag "search[include][value]", "1", true %>
<% end %>
