<div class="apple_pagination">
  <!-- render page links in the view: -->
  <%= will_paginate @search.results %>
</div>
<div class="table spacing expand_width">
  <div class="row">
    <%- result_headers.each do |proc| -%>
        <div class="cell"><%= proc.call @search.group %></div>
    <%- end -%>
  </div>
  <%- if @search.default? -%>
      <%- @search.results.each do |result| -%>
          <%= render :partial => "searches/result", :locals => { :result => result}, :inline => true %>
      <%- end -%>
  <%- end -%>
  <%- if @search.cross? %>
      <%- @search.results.each do |result| -%>
          <%= render :partial => "searches/cross/result_cross", :locals => { :result => result}, :inline => true %>
      <%- end -%>
  <%- end -%>
</div>
<div class="apple_pagination">
  <!-- render page links in the view: -->
  <%= will_paginate @search.results %>
</div>
