<%= form_for search, :html => {:method => "get", :onsubmit =>
	"this.hidden_javascript.value=1;return true;", :class => "form-horizontal" } do |f| %>
	<div class="row">
		<div class="span2">
			<h3>Display</h3>
		</div>
		<div class="span7">
			<%= render :partial => 'searches/form/includes' %>
		</div>
	</div>
	<div class="row">
		<div class="span2">
			<h3>Advanced</h3>
		</div>
		<div class="span7">
			<%= render :partial => 'searches/form/advanced_set', :locals => { :f => f }, :inline => true %>
		</div>
	</div>
	<div class="row">
		<div class="span2">

		</div>
		<div class="span7">
			<%= f.submit "Show results", :name => nil, :class => "btn" %>
			<input class="nudge btn" type='reset' value='Reset'>
		</div>

	</div>
	<div class="row">
		<div class="span2">
			&nbsp;
		</div>
	</div>
	<div class="row">
		<div class="span7">
			<h3>Constraints</h3>
		</div>
		<div class="span2">
			<%= render :partial => 'searches/form/lings', :locals => { :f => f }, :inline => true %>
			<%= render :partial => 'searches/form/properties', :locals => { :f => f }, :inline => true %>
			<%= render :partial => 'searches/form/lings_properties', :locals => { :f => f }, :inline => true %>
			<%= render :partial => 'searches/form/examples', :locals => { :f => f }, :inline => true %>
		</div>
	</div>
	<div class="row">
		<div class="span7">

		</div>
		<div class="span2">
			<input type="hidden" name="search[javascript]" value="0" id="hidden_javascript">
			<%= f.submit "Show results", :name => nil %>
			<input class="nudge" type="reset" value="Reset">
		</div>
	</div>
<% end %>
