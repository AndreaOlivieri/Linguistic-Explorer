<%= javascript_tag "$.getScript('/javascripts/typeahead.js');" %>

<%= form_for([current_group, @example], :html => {:class => "form-horizontal"}) do |f| %>

  <% if @example.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@example.errors.count, "error") %> prohibited this <%= current_group.example_name %> from being saved:</h2>

      <ul>
      <% @example.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, :class => "control-label" %>
    <div class="controls">
      <%= f.text_field :name, :placeholder => "Leave empty to generate a name" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label current_group.ling0_name, :class => "control-label" %>
    <div class="controls">
      <%= text_field_tag "ling_id", "", :id => "auto_ling", :placeholder => "Loading...", :class => "autocomplete", :autocomplete => "off", :disabled => "true" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label current_group.ling0_name, :class => "control-label" %>
    <div class="controls">
      <%= text_field_tag "prop_id", "", :id => "auto_prop", :placeholder => "Loading...", :class => "input-block-level autocomplete", :autocomplete => "off", :disabled => "true" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label "%s-Property" % current_group.ling0_name, :class => "control-label" %>
    <div class="controls">
      <div id="lp-status" class="alert">
        Not Found (Enter Ling and Property Name)
      </div>
    </div>
  </div>

  <% @example.storable_keys.each do |key| %>
    <div class="control-group">
      <%= label :stored_values, key, :class => "control-label" %>
      <div class="controls">
        <%= text_field :stored_values, key, :value => @example.stored_value(key) %>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <div class="controls">
      <%= f.submit :class => "btn" %>
    </div>
  </div>
<% end %>
