<% @examples.each do |example| %>
  <tr>
    <td><%= example.id %></td>
    <td><%= (link_to example.ling.name, group_ling_path(@group, example.ling)) if example.ling %></td>
    <td><%= link_to 'Show', [@group, example] %></td>
    <td><%= link_to 'Edit', edit_group_example_path(@group, example) %></td>
    <td><%= link_to 'Destroy', [@group, example], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

