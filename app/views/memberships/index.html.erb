<% page_heading "Members" %>

<h1>Listing Memberships</h1>

<table>
  <tr>
    <th>Member</th>
    <th>Level</th>
    <th></th>
    <th></th>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%= membership.member.name %></td>
    <td><%= membership.level %></td>
    <td><%= link_to 'Edit', edit_group_membership_path(current_group, membership) %></td>
    <td><%= link_to 'Destroy', [current_group, membership], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to "New Membership", new_group_membership_path(current_group) %>
