- page_heading "Contributors"
.row
  .col-md-6
    %h1 #{current_group.name} Contributors
  .col-md-6
    .row{:style => "margin-top: 25px;"}
      .col-md-10
        %input#member-search-field.form-control{:autocomplete => "off", :placeholder => "Loading...", :type => "text"}
      - if can_see? :manage, Membership.new{|m| m.group = current_group}
        .col-md
          = link_to new_group_membership_path(current_group), :class => "btn btn-success pull-right",:rel => "tooltip", :title => "New Contributors", :data => {:toggle => "tooltip", :animation => "true", :placement => "left"} do
            = icon "plus"
#pagination_table
  = render :partial => "contributors_partial"
