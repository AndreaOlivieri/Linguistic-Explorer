#pagination_top.apple_pagination.will-paginate
  / render page links in the view:
  = will_paginate @properties, renderer: BootstrapPagination::Rails
%table.show-table.table.table-bordered.table-striped.table-hover
  %tr
    %th.col-md-6 Name
    %th= current_group.category_name
    %th.col-md-2
      Completeness
      %a{:href => "#", :rel => "tooltip", :title => "Hover the icon for percentage details", :data => {:toggle => "tooltip", :animation => "true"} }
        = icon 'question-circle', '', :class => "pull-right"
    - if can_see? :manage, @properties
      %th Actions
  - @properties.each do |property|
    %tr
      %td= link_to property.name, [current_group, property]
      %td= link_to property.category.name, group_category_path(current_group, property.category)
      - percentage = "#{property.info}%"
      - label = "#{property.info < 100 ? property.info < 50 ? 'Less than half' : 'Almost Complete' : 'Complete'}: #{percentage}"
      - stage = property.info < 100 ? property.info < 50 ? 'error' : 'warning' : 'success'
      - icon_name  = property.info < 100 ? property.info < 50 ? 'star-o' : 'star-half-o' : 'star'
      %td{:class => "#{stage}"}
        %p.strong
          %a{:href => "#", :rel => "tooltip", :title => label, :data => {:toggle => "tooltip" } }
            = icon icon_name, '' , :class => "fa-2x"
      / # - if can_see? :destroy, property
      / #   %td
      / #     = link_to 'Destroy', [current_group, property], :class => 'btn btn-danger', :confirm => 'Are you sure?', :method => :delete
      - if can_see? :manage, property
        %td
          = link_to edit_group_property_path(current_group, property), :class => 'btn btn-default', :title => "Edit" do
            = icon 'edit', '', :class => "fa-15x"
          - if can_see? :destroy, property
            = link_to [current_group, property], :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger', :title => "Destroy" do
              = icon 'trash-o', '', :class => "fa-15x"
%br/
