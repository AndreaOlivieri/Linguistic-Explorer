= form_for([current_group, @property], :html => {:class => "form-horizontal"}) do |f|
  - if @property.errors.any?
    #error_explanation
      %h2
        = pluralize(@property.errors.count, "error")
        prohibited this #{current_group.property_name} from being saved:
      %ul
        - @property.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .col-sm-6
      = f.label :name, :class => "control-label"
      .controls
        = f.text_field :name, :class => "form-control"
  .form-group
    .col-sm-6
      = f.label current_group.category_name, :class => "control-label"
      .controls
        = f.collection_select :category_id, @categories[:depth_0] + @categories[:depth_1], :id, :name, :class => "form-control-funny", :prompt => 'Select a ' + current_group.category_name
  .form-group
    .col-sm-6
      = f.label :description, :class => "control-label"
      .controls
        = f.text_area :description, :rows => 20, :class => "form-control", :id => "desc"
  .form-group
    .col-sm-6.col-sm-offset-6
      .controls
        = f.submit :class => "btn btn-success pull-right"
