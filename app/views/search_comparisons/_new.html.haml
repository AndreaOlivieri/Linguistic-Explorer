.well
  = form_for :comparison, :url => [current_group, :search_comparisons], :html => {:class => "form-horizontal" } do |f|
    .row
      .col-md-6
        .form-group
          = f.label :type, "Action", :class => "control-label col-md-4"
          .col-md-8
            = f.select :type, @search_comparison.comparison_options, { :include_blank => true}, :class => "form-control"
        .form-group
          = f.label :of_id, "of", :class => "control-label col-md-4"
          .col-md-8
            = f.select :of_id, @search_comparison.search_options, {:include_blank => true}, :class => "form-control"
        .form-group
          .row
            = render :partial => 'searches/form/includes', :locals => { :resource_name => :comparison }
      .col-md-6
        .form-group
          %label.control-label{:style => "visibility: hidden;"} Hidden
          .col-md-8
            %select.form-control{:style => "visibility: hidden;"}
        .form-group
          = f.label :with_id, "with", :class => "control-label col-md-2"
          .col-md-8
            = f.select :with_id, @search_comparison.search_options, {:include_blank => true}, :class => "form-control"
        .form-group
          .col-md-10.col-md-offset-2
            = f.submit "Go", :class => "btn btn-default"
