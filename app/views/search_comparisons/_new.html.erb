<%= form_for :comparison, :url => [current_group, :search_comparisons] do |f| %>
  <%= f.label :type, "Perform" %> <%= f.select :type, @comparison.comparison_options, :include_blank => "Choose comparison" %>
  <%= f.label :of_id, "of" %> <%= f.select :of_id, @comparison.search_options, :include_blank => true %>
  <%= f.label :with_id, "with" %> <%= f.select :with_id, @comparison.search_options, :include_blank => true %>
  <%= f.submit "Go" %>
<% end %>
