var bindTypeahead = function(id) {
    var dict, items = [];
    $.get(location.href.replace(/[\?#]+[^\?]*$/, "") + "groups/" + id + "/lings/dict", function(data) { 
      dict = data;
      $.each(dict, function(key, val) {
        items.push(key);
      });    
    }).done( function() {
        $('#auto_' + id).typeahead({
          source: items,
          updater:function (item){
            window.location.href = '/groups/' + id + '/lings/' + dict[item]; 
          }
        });
        $('#auto_' + id).attr("placeholder", "Type the name of a language...").removeAttr('disabled');
    }); 

  };

$(function () {
  $('.carousel').carousel({
    interval: 4000
  });
  $('#tabs a').click(function (e) {
    e.preventDefault();
    $(this).tab('show');
    if (!$(this).data('bind')) {
      bindTypeahead($(this).data('bind', true).data('id'));
    }
  });
  bindTypeahead($('#search-tabs ul li:first a').data('bind',true).data('id'));
});
